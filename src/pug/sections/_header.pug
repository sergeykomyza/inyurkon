include ./../mixins/_mixin1.pug

-
    var menu = [
        {linkText: 'О нас', link: '#'},
        {linkText: 'Команда', link: 'team.html'},
        {linkText: 'Услуги', link: 'services.html'},
        {linkText: 'Новости', link: 'news.html'},
        {linkText: 'Контакты', link: 'contacts.html'}
    ]

header.header
    .header__box
        a(href="home.html") 
            img.header__logo(src="img/logo.png")
        nav.header-menu
            ul.header-menu__list
                each item in menu
                    li.header-menu__item
                        a.header-menu__link(href= item.link)= item.linkText
        .header-phone
            a(href="tel:+74959161925")
                img.header-phone__icon(src="img/icon-phone.png")
            .header-phone__numbers
                a(href="tel:+74959161925") +7 (495) 916-19-25
                a(href="tel:+74957253311") +7 (495) 725-33-11
        .mobile
            .header__burger.js-mmenuToggle 
                i.fa-solid.fa-bars

